{
    "version": "0.2.0",
    "configurations": [
        //^ C++
        {
            "name": "C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Program Files (x86)/mingw-w64/i686-8.1.0-posix-dwarf-rt_v6-rev0/mingw32/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++.exe build active file"
        },
        //^ Java
        {
            "type": "java",
            "name": "Java",
            "request": "launch",
            "mainClass": "${fileBasenameNoExtension}",
            "cwd": "${fileDirname}/"
        },
        //^ Ruby
        {
            "name": "Ruby",
            "type": "Ruby",
            "request": "launch",
            "program": "${fileDirname}/${file}",
            "cwd": "${fileDirname}/"
        },
        //^ Python
        {
            "name": "Python",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}/",
            "console": "integratedTerminal"
        },
        //^ JavaScript 
        {
            "type": "pwa-node",
            "name": "JavaScript",
            "request": "launch",
            "program": "${fileDirname}\\${fileBasenameNoExtension}.js",
            "cwd": "${fileDirname}/"
        }
    ]
}
